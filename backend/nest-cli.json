{
	"$schema"        : "https://json.schemastore.org/nest-cli",
	"collection"     : "@nestjs/schematics",
	"sourceRoot"     : "src",
	"entryFile"      : "backend/src/main.js",
	"compilerOptions": {
		"deleteOutDir": true,
		"assets"      : [
			{
				"include"    : "i18n/**/*",
				"watchAssets": true,
				"outDir"     : "dist/backend/src"
			}
		]
	}
}
